# Google OAuth (if needed)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# Telegram Login Bot Configuration
VITE_TELEGRAM_BOT_USERNAME=goevent_authentication_bot

# Asset Protection
# Set to 'true' to enable asset protection in development mode
VITE_ASSET_PROTECTION_ENABLED=false

# Telegram Admin Notifications (optional)
VITE_TELEGRAM_BOT_TOKEN=8404144262:AAGaZs5ZNYeIwapC_H5Dnu97ygOA6KVfDQw
VITE_TELEGRAM_ADMIN_CHAT_ID=6934534080

# ImageKit Configuration (optional)
# Set to 'false' to disable ImageKit CDN image optimization
# Useful for local development when you don't need CDN resizing
# Can also be toggled at runtime via browser console:
#   localStorage.setItem('imagekit_enabled', 'false')  // Disable
#   localStorage.setItem('imagekit_enabled', 'true')   // Enable
#   localStorage.removeItem('imagekit_enabled')        // Use env default
VITE_IMAGEKIT_ENABLED=false

# Showcase Animation Type
# Controls the cover-to-main-content transition animation
# Options: 'decoration' (current - decorations slide out), 'door' (doors open from center)
VITE_SHOWCASE_ANIMATION_TYPE=decoration
